{
	"name": "kratos",
	"copyright": "Copyright © 2014, René Zwanenburg",
	"authors":
	[
		"René Zwanenburg"
	],

	"targetType": "executable",
	"targetPath": "build",

	"buildTypes":
	{
		"performance-debug":
		{
			"buildOptions": ["releaseMode", "optimize", "inline", "debugInfo"]
		}
	},

	"versions":
	[
		"VibeCustomMain"
	],

	"copyFiles-windows-x86":
	[
		"lib/windows/x86/glfw3.dll",
		"lib/windows/x86/Assimp32.dll",
		"lib/windows/x86/DevIL.dll"
	],
	"copyFiles-windows-x86_64":
	[
		"lib/windows/x86_64/glfw3.dll",
		"lib/windows/x86_64/Assimp64.dll",
		"lib/windows/x86_64/DevIL.dll"
	],

	"postBuildCommands":
	[
		"dub run -q kratosassetpacker -- ../Kratos/assets ../Kratos/build/Kratos.assetpack"
	],

	"dependencies":
	{
		"kratosassetpacker": { "version": "~master", "path": "../KratosAssetPacker" },
		"kgl3n": { "version": "~master", "path": "../kgl3n" },
		"derelict-gl3": "~>1.0",
		"derelict-glfw3": "~>1.0",
		"derelict-assimp3": "~>1.0",
		"derelict-il": "~master",
		"logger": "==0.2.0",
		"vibe-d": { "version": "~master", "path": "../vibe.d" }
	}
}
